extends layout

block content
  h1= title
  form(action='',method='post')
    div
      label(for='name') Name:
      input(type='text', name='name', id='name', placeholder='Name here...')
    div
      label(for='LastName') Last Name:
      input(type='text', name='lastName', id='lastName', placeholder='Last name...')
    div
      label(for='email') Email:
      input(type='email', name='email', id='email', placeholder='Age...')
    div
      label(for='password') Password:
      input(type='password', name='password', id='password', placeholder='Pass...')
    div
      label(for='confirm') Confirm:
      input(type='password', name='confirm', id='confirm', placeholder='Confirm...')
    div
      input(type='submit', value='Save')
  style.
    form label { min-width: 80px; display: inline-block; }
    form > div { padding: 5px; }
